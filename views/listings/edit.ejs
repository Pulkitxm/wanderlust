<% layout('./layouts/Boilerplate') %>
<body>
  <div class="container">
    <h2>Update <%=place.title%></h2>
    <form action="/<%=place.id%>?_method=PATCH" method="POST" novalidate class="needs-validation" enctype="multipart/form-data" >
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control"
          type="text"
          value="<%= place.title %>"
          name="title"
          id="title"
          placeholder="Enter title"
          required
          />
          <div class="invalid-feedback">
            Invalid Title!
          </div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <input
          class="form-control"
          type="text"
          value="<%= place.description %>"
          name="description"
          id="description"
          placeholder="Enter description"
          required
          />
          <div class="invalid-feedback">
            Invalid Description!
          </div>
      </div>

      <div class="mb-3">
        <image src="<%=originalImageUrl%>">
      </div>

      <div class="mb-3">
        <label class="form-label" for="image">Upload New Image</label>
        <input
          class="form-control"
          type="file"
          value="<%= place.image.url %>"
          name="imageFile"
          id="image"
          placeholder="Enter image"
          />
          <div class="invalid-feedback">
            Invalid Image!
          </div>
      </div>

     <div class="row">
       <div class="mb-3 col-md-6">
        <label class="form-label" for="price">Price</label>
        <input
          class="form-control"
          type="text"
          value="<%= place.price %>"
          name="price"
          id="price"
          placeholder="Enter price"
          required
          />
          <div class="invalid-feedback">
            Invalid Price!
          </div>
      </div>

      <div class="mb-3 col-md-6">
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control"
          type="text"
          value="<%= place.location %>"
          name="location"
          id="location"
          placeholder="Enter location"
          required
          />
          <div class="invalid-feedback">
            Invalid Location!
          </div>
      </div>
     </div>

      <div class="mb-3">
        <label class="form-label" for="country">Country</label>
        <input
          class="form-control"
          type="text"
          value="<%= place.country %>"
          name="country"
          id="country"
          placeholder="Enter country"
          required
          />
          <div class="invalid-feedback">
            Invalid Country!
          </div>
      </div>
      <div class="d-flex justify-content-center">
        <button class="btn btn-primary " >UPDATE</button>
      </div>
    </form>
  </div>
</body>